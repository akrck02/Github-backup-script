{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "outDir": "./out/",
      "rootDir": "./src/",
      "strict": true,
      "esModuleInterop": true,
  
      /* Experimental Options */
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true ,
  
      /* Advanced Options */
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "files": [
      "./src/configuration.ts",
      "./src/logger.ts",
      "./src/commands.ts",
      "./src/service.ts",
    ]
  }